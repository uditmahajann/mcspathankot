---
import { Phone, MapPin, Mail, Facebook, Instagram, Twitter, Youtube } from 'lucide-react';

const currentYear = new Date().getFullYear();

const schoolName = "Montessori Cambridge School";

const contact = {
  address: "Defence Road (Pangoli), Pathankot â€“ 145001",
  phone: "+91 98765-70911, +91 98765-70912 ",
  email: "mcspathankot1@gmail.com"
};

const academics = [
  { name: "Kindergarten School", href: "/academics/kindergarten" },
  { name: "Primary School", href: "/academics/primary-school" },
  { name: "Middle School", href: "/academics/middle-school" },
  { name: "Secondary School", href: "/academics/secondary-school" },
  { name: "Senior Secondary School", href: "/academics/senior-secondary-school" }
];

const admissions = [
  { name: "Admission Procedure", href: "/admission/admission-process" },
  { name: "Apply Online", href: "/admission/admission-process#apply-online" },
  { name: "Fee Structure", href: "/admission/fee-structure" },
  { name: "Withdrawals", href: "/admission/withdrawals" },
  { name: "Transfer Certificates", href: "/admission/transfer-certificate" }
];

const curriculum = [
  { name: "Annual Calendar", href: "/curriculum/annual-calendar" },
  { name: "Syllabus", href: "/curriculum/syllabus" },
  { name: "Booklists", href: "/curriculum/booklist" },
  { name: "Examinations", href: "/curriculum/examinations" },
  { name: "Results", href: "/curriculum/results" }
];
---

<footer class="bg-blue-950 text-white font-poppins leading-relaxed">
  <div class="px-5 sm:px-10 md:px-16 lg:px-20 xl:px-24 py-12">
    <div class="grid grid-cols-1 gap-y-12 gap-x-12 md:grid-cols-2 lg:grid-cols-5">
      <!-- Contact Section -->
      <div class="space-y-6 lg:col-span-2">
        <div class="flex items-start gap-4">
          <img src="/Images/Logos/mcslogo-white.png" alt="MCS Logo" class="w-25 invert mb-2" loading="lazy" />
          <h2 class="text-2xl font-bold text-white mt-2">Montessori<br />Cambridge School</h2>
        </div>

        <div class="space-y-4 text-slate-300 text-base">
          <p class="flex items-start">
            <MapPin className="w-5 h-5 mr-2 text-sky-500" />
            <span>{contact.address}</span>
          </p>
          <p class="flex items-center">
            <Phone className="w-5 h-5 mr-2 text-sky-500" />
            <span>{contact.phone}</span>
          </p>
          <p class="flex items-center">
            <Mail className="w-5 h-5 mr-2 text-sky-500" />
            <a href={`mailto:${contact.email}`} class="hover:text-emerald-400 transition-colors">
              {contact.email}
            </a>
          </p>
        </div>

        <div class="flex space-x-4 pt-2">
          <a href="https://www.facebook.com/mcspathankot1997" class="rounded-full bg-slate-700 p-2 text-slate-300 transition-colors hover:bg-sky-500 hover:text-white">
            <span class="sr-only">Facebook</span>
            <Facebook className="w-6 h-6" />
          </a>
          <a href="https://www.instagram.com/mcspathankot1997" class="rounded-full bg-slate-700 p-2 text-slate-300 transition-colors hover:bg-sky-500 hover:text-white">
            <span class="sr-only">Instagram</span>
            <Instagram className="w-6 h-6" />
          </a>
          <a href="https://www.youtube.com/@mcspathankot1997" class="rounded-full bg-slate-700 p-2 text-slate-300 transition-colors hover:bg-sky-500 hover:text-white">
            <span class="sr-only">YouTube</span>
            <Youtube className="w-6 h-6" />
          </a>
          <a href="https://x.com/mcspathankot97" class="rounded-full bg-slate-700 p-2 text-slate-300 transition-colors hover:bg-sky-500 hover:text-white">
            <span class="sr-only">Twitter</span>
            <Twitter className="w-6 h-6" />
          </a>
        </div>
      </div>

      <!-- Academics -->
      <div>
        <h3 class="text-lg font-semibold text-white">Academics</h3>
        <ul class="mt-4 space-y-2">
          {academics.map(item => (
            <li><a href={item.href} class="text-slate-300 hover:text-sky-500">{item.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Admissions -->
      <div>
        <h3 class="text-lg font-semibold text-white">Admissions</h3>
        <ul class="mt-4 space-y-2">
          {admissions.map(item => (
            <li><a href={item.href} class="text-slate-300 hover:text-sky-500">{item.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Campus Life -->
      <div>
        <h3 class="text-lg font-semibold text-white">Curriculum</h3>
        <ul class="mt-4 space-y-2">
          {curriculum.map(item => (
            <li><a href={item.href} class="text-slate-300 hover:text-sky-500">{item.name}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 border-t border-slate-700 pt-8">
      <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
        <p class="text-sm text-slate-400">
          &copy; {currentYear} {schoolName}
        </p>
        <nav class="flex flex-wrap gap-x-6 text-sm text-slate-400">
          <a href="/attributions" class="hover:text-sky-500">Attributions</a>
          <a href="/privacy-policy" class="hover:text-sky-500">Privacy Policy</a>
          <a href="/terms-and-conditions" class="hover:text-sky-500">Terms & Conditions</a>
        </nav>
      </div>
    </div>
  </div>
</footer>
