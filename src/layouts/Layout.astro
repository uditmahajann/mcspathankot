---                           
import '../styles/global.css'
import Footer from "../components/interface/Footer.astro";
import Header from "../components/interface/Header.astro";

import '@fontsource/poppins';
// Supports weights 100-900
import '@fontsource-variable/inter';
// Supports weights 100-900
import '@fontsource-variable/raleway';
// Supports weights 100-900
import '@fontsource-variable/outfit';
// Supports weights 100-800
import '@fontsource-variable/playpen-sans';
// Supports weights 400-700
import '@fontsource-variable/lora';

const { title, description, canonical, ogImage, pubDate } = Astro.props;

--- 


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Images/Logos/mcsbadge.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="title" content={title} />
        <meta name="description" content={description} />
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
